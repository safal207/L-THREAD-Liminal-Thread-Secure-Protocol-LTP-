{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ES2022"]
  },
  "include": ["scripts/**/*.ts", "sdk/js/**/*.ts", "src/**/*.ts", "tools/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
