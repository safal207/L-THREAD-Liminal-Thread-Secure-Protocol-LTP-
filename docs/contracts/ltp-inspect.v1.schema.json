{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ltp-inspect contract v1.0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract",
    "generated_at",
    "tool",
    "input",
    "orientation",
    "continuity",
    "futures",
    "branches",
    "notes"
  ],
  "properties": {
    "contract": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version", "schema"],
      "properties": {
        "name": {
          "type": "string",
          "const": "ltp-inspect"
        },
        "version": {
          "type": "string",
          "const": "1.0"
        },
        "schema": {
          "type": "string",
          "const": "docs/contracts/ltp-inspect.v1.schema.json"
        }
      }
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "build"],
      "properties": {
        "name": {
          "type": "string",
          "const": "ltp:inspect"
        },
        "build": {
          "type": "string"
        }
      }
    },
    "input": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "frames", "format"],
      "properties": {
        "path": {
          "type": "string",
          "minLength": 1
        },
        "frames": {
          "type": "integer",
          "minimum": 0
        },
        "format": {
          "type": "string",
          "enum": ["jsonl", "json"]
        }
      }
    },
    "orientation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["stable", "drift_level", "identity", "drift_history"],
      "properties": {
        "stable": {
          "type": "boolean"
        },
        "identity": {
          "type": "string",
          "minLength": 1
        },
        "drift_level": {
          "type": "string",
          "enum": ["low", "medium", "high", "unknown"]
        },
        "focus_momentum": {
          "type": "number"
        },
        "drift_history": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["value"],
            "properties": {
              "id": {
                "type": "string"
              },
              "ts": {
                "type": ["string", "number"]
              },
              "value": {
                "type": ["number", "string"]
              },
              "note": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "continuity": {
      "type": "object",
      "additionalProperties": false,
      "required": ["preserved", "notes"],
      "properties": {
        "preserved": {
          "type": "boolean"
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "token": {
          "type": "string"
        }
      }
    },
    "futures": {
      "type": "object",
      "additionalProperties": false,
      "required": ["admissible", "degraded", "blocked"],
      "properties": {
        "admissible": {
          "type": "array",
          "items": { "$ref": "#/$defs/branch" }
        },
        "degraded": {
          "type": "array",
          "items": { "$ref": "#/$defs/branch" }
        },
        "blocked": {
          "type": "array",
          "items": { "$ref": "#/$defs/branch" }
        }
      }
    },
    "branches": {
      "type": "array",
      "items": { "$ref": "#/$defs/branch" }
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "$defs": {
    "branch": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "status"],
      "properties": {
        "id": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "confidence": {
          "type": "number"
        },
        "path": {
          "type": "string"
        },
        "class": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
